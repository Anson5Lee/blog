extends layout
block page
  - var menu = 'login'
block content
  .col-md-4.col-md-offset-4
    //- h2.text-center 登  陆
    div.text-danger= error
    div
      form(action="/login", method="POST")
        p
          input.form-control(name="email", type="text", placeholder="请输入邮箱")
        p
          input.form-control(name="password", type="password", placeholder="请输入密码")
        p
          button.btn.btn-lg.btn-success.btn-block(type="submit") 登陆
